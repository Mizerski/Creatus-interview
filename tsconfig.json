{
	"compilerOptions": {
	  "target": "es6",
	  "module": "commonjs",
	  "rootDir": "./src",
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "paths":{
		"@/classes/*": ["./src/classes/*"],
		"@/interfaces/*": ["./src/interfaces/*"],
		"@/types/*": ["./src/types/*"],
		"@/utils/*": ["./src/utils/*"],
		"@/config/*": ["./src/config/*"],
		"@/services/*": ["./src/services/*"],
		"@/middlewares/*": ["./src/middlewares/*"],
		"@/controllers/*": ["./src/controllers/*"],
		"@/routes/*": ["./src/routes/*"],
		"@/models/*": ["./src/models/*"],
		"@/database/*": ["./src/database/*"],
		"@/constants/*": ["./src/constants/*"],
		"@/tests/*": ["./src/tests/*"]
	  }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
  }